{
  "compilerOptions": {
    "skipDefaultLibCheck": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/**/*.ts", "src/**/*.tsx"],

  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
